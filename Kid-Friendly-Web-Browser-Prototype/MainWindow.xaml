            <Button x:Name="button3" Content="Button 3" Click="ButtonClicked" HorizontalAlignment="Left" Margin="1264,857,0,0" VerticalAlignment="Top" Width="180" Height="180"/>
            <Button x:Name="button4" Content="Button 4" HorizontalAlignment="Left" Margin="1701,966,0,0" VerticalAlignment="Top" Width="72" Height="71"/>
            <Button x:Name="button5" Content="Button 5" HorizontalAlignment="Left" Margin="1803,966,0,0" VerticalAlignment="Top" Width="72" Height="71"/>
            <Button x:Name="buttonRight" Content="R. Button" HorizontalAlignment="Left" Margin="1778,281,0,0" VerticalAlignment="Top" Width="97" Height="361"/>
            <Button x:Name="buttonLeft" Content="L. Button" HorizontalAlignment="Left" Margin="53,281,0,0" VerticalAlignment="Top" Width="97" Height="361"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="215,131,0,0" VerticalAlignment="Top" Width="443"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="215,499,0,0" VerticalAlignment="Top" Width="443"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="1264,499,0,0" VerticalAlignment="Top" Width="443"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="740,131,0,0" VerticalAlignment="Top" Width="443"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="740,499,0,0" VerticalAlignment="Top" Width="443"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="302" Margin="1264,131,0,0" VerticalAlignment="Top" Width="443"/>
            <ProgressBar  HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="1920"/>
        </Grid>
    </Viewbox>


</Window>
