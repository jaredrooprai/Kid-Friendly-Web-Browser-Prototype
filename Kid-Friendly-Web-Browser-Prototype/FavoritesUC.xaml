<UserControl x:Class="Kid_Friendly_Web_Browser_Prototype.FavoritesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kid_Friendly_Web_Browser_Prototype"
             mc:Ignorable="d" 
             d:DesignHeight="780" d:DesignWidth="1100">
    <UserControl.Resources>
        <Image x:Key="Sesame" Source="images/thumbnails/sesame.png" Stretch="Fill" Width="484" />
    </UserControl.Resources>
    
    <Grid>

        <Button x:Name="TopLeft" Click="website_Click" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="484" Height="332" Background="Transparent"  BorderThickness="0">
            <DynamicResource ResourceKey="Sesame" />
            <Button.Effect>
                <DropShadowEffect BlurRadius="13" ShadowDepth="2" />
            </Button.Effect>
        </Button>
        
        <!--<Image x:Name="heart" Source="images/heart.png" HorizontalAlignment="Left" Height="100" Margin="500,380,0,0" VerticalAlignment="Top" Width="100"/>-->
    </Grid>
</UserControl>
